@model IEnumerable<LojaInterativaAval.Models.Fabricante>

@{
    ViewData["Title"] = "Index";
}

<h1>Fabricantes</h1>

<p>
    <a asp-action="Create">Novo Fabricante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria3)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
